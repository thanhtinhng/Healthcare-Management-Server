<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit doctor</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .required {
          color: red;
        }
        .gradient-custom-3 {
        background: #84fab0;
        background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));
        background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5))
        }
        .gradient-custom-4 {
        background: #84fab0;
        background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
        background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1))
        }
        </style>
        <script>
          
        </script>
</head>
<body>
      <section class="bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center  gradient-custom-3" style="padding: 50px;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h4 class="text-uppercase text-center mb-5">Sửa thông tin bác sĩ</h4>

              <form action="/put-crud" method="post" id="registerForm">

               
                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="name">Họ & Tên<span class="required"> *</span></label>
                    <input value="<%=doctorData.DoctorName%>" type="text" id="name" name="name" class="form-control form-control-lg" required/>
                </div>
          

                <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                    <h6 class="mb-0 me-4">Giới tính: <span class="required"> *</span></h6>
                    <div >
                        <select id="gender" name="gender" data-mdb-select-init required style="margin-left: 25px; padding: 5px;">
                        <option value="0">Nam</option>
                        <option value="1">Nữ</option>
                        </select>
                    </div>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="birthdate">Ngày sinh<span class="required"> *</span></label> 
                    <input value="<%=doctorData.DoctorBirthdate%>" type="date" id="birthdate" name="birthdate" class="form-control form-control-lg" required/>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="datejoin">Ngày vào làm<span class="required"> *</span></label>
                    <input value="<%=doctorData.DateJoined%>" type="date" id="datejoin" name="datejoin" class="form-control form-control-lg" required/>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="phone">Số điện thoại<span class="required"> *</span></label> 
                    <input value="<%=doctorData.DoctorPhone%>" type="text" id="phone" name="phone" class="form-control form-control-lg" />
                </div>


                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="department">Chuyên khoa<span class="required"> *</span></label>
                    <div >
                        <select id="department" name="department" data-mdb-select-init required style="margin-left: 25px; padding: 5px;">
                            <option value="CNK">Chống nhiễm khuẩn</option>
                            <option value="CXK">Cơ – xương – khớp</option>
                            <option value="D">Dược</option>
                            <option value="DD">Dinh dưỡng</option>
                            <option value="DL">Da Liễu</option>
                            <option value="DU">Dị ứng</option>
                            <option value="HS">Hóa Sinh</option>
                            <option value="HSCC">Hồi sức cấp cứu</option>
                            <option value="KB">Khám bệnh</option>
                            <option value="M">Mắt</option>
                            <option value="N">Nhi</option>
                            <option value="NLN">Ngoại lồng ngực</option>
                            <option value="NS">Nội soi</option>
                            <option value="NTH">Nội tổng hợp</option>
                            <option value="PS">Phụ sản</option>
                            <option value="PTGMHS">Gây mê hồi sức</option>
                            <option value="NHA">Nha khoa</option>
                            <option value="T">Lọc máu (thận nhân tạo)</option>
                            <option value="TH">Nội tiêu hóa</option>
                            <option value="TM">Nội tim mạch</option>
                            <option value="NTK">Thần kinh</option>
                            <option value="TMH">Tai – mũi – họng</option>
                            <option value="TN">Truyền nhiễm</option>
                            <option value="TTN">Thận – tiết niệu</option>
                            <option value="YHCT">Y học cổ truyền</option>
                            <option value="YHHN">Y học hạt nhân</option>
                        </select>
                        
                    </div>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="specialization">Chuyên môn</label>
                    <input value="<%=doctorData.Specialization%>" type="text" id="specialization" name="specialization" class="form-control form-control-lg" />
                </div>

                <div class="d-flex justify-content-center">
                    <button  type="submit" data-mdb-button-init
                        data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Hoàn tất</button>
                </div>
                <input type="text" value="<%=doctorData.DoctorID%>" name="id" hidden>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</html>