<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>.card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
        }
        .card-registration .select-arrow {
        top: 13px;
        }
        .required{
            color: red;
        }
        </style>
        <script>
          
        </script>
</head>
<body>
    <section class=" bg-dark">
        <div class="container py-5 ">
          <div class="row d-flex justify-content-center align-items-center ">
            <div class="col">
              <div class="card card-registration my-4">
                <div class="row g-0">
                  <div class="col-xl-6 d-none d-xl-block">
                    <img src="https://cdn.discordapp.com/attachments/879535531367751772/1240354309384704041/98524985.jpg?ex=66464178&is=6644eff8&hm=f41d66c0f544a83177a58dd79c32f409264126156c9efb4497fb990fc63b14b1&"
                      alt="Sample photo" class="img-fluid"
                      style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                  </div>
                  <div class="col-xl-6">
                    <div class="card-body p-md-5 text-black">
                      <h4 class="mb-5 text-uppercase">Đăng ký tài khoảng bệnh nhân</h4>

                      <form action="/post-crud" method="post" id="registerForm">
                      <div class="row">
                        <div class="col-md-6 mb-4">
                          <div data-mdb-input-init class="form-outline">
                            <input type="text" id="last-name" name="last_name" class="form-control form-control-lg" required/>
                            <label class="form-label" for="last-name">Họ<span class="required"> *</span></label>
                          </div>
                        </div>
                        <div class="col-md-6 mb-4">
                          <div data-mdb-input-init class="form-outline">
                            <input type="text" id="first-name" name="first_name" class="form-control form-control-lg" required/>
                            <label class="form-label" for="first-name">Tên<span class="required"> *</span></label>
                          </div>
                        </div>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" id="email" name="email" class="form-control form-control-lg" required/>
                        <label class="form-label" for="email">Email<span class="required"> *</span></label>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" id="password" name="password" class="form-control form-control-lg" required/>
                        <label class="form-label" for="password">Mật khẩu<span class="required"> *</span></label>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg" required/>
                        <label class="form-label" for="confirmPassword">Nhập lại Mật khẩu<span class="required"> *</span></label>
                      </div>

                      <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                        <h6 class="mb-0 me-4">Giới tính: <span class="required"> *</span></h6>
                        <div >
                          <select id="sex" name="sex" data-mdb-select-init required style="margin-left: 25px; padding: 5px;">
                            <option value="0">Nam</option>
                            <option value="1">Nữ</option>
                          </select>
                        </div>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="date" id="birthdate" name="birthdate" class="form-control form-control-lg" required/>
                        <label class="form-label" for="birthdate">Ngày sinh<span class="required"> *</span></label> 
                      </div>
      
                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="addr" name="addr" class="form-control form-control-lg" />
                        <label class="form-label" for="addr">Địa chỉ<span class="required"> *</span></label> 
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="CCCD" name="CCCD" class="form-control form-control-lg" required/>
                        <label class="form-label" for="CCCD">Căn cước công dân<span class="required"> *</span></label>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="phone" name="phone" class="form-control form-control-lg" required/>
                        <label class="form-label" for="phone">Số điện thoại<span class="required"> *</span></label>
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="emergency" name="emergency" class="form-control form-control-lg" />
                        <label class="form-label" for="emergency">Liên hệ khẩn cấp</label>
                      </div>

                      <div class="d-flex justify-content-end pt-3">
                        <button  type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-lg ms-2">TẠO</button>
                      </div>
                    </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
</html>